{
  "compilerOptions": {
    "outDir": "build/",
    "sourceMap": true,
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "test-mcp-client.js",
    "mcp-transport.js",
    ".homeycompose"
  ]
}
